<Window x:Class="Collaborator.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collaborator"
        mc:Ignorable="d"
        Title="Password" Height="600" Width="800">
    <Border Padding="10">
        <StackPanel Margin="10 0 0 0">
            <!--Current Password-->
            <StackPanel Margin="0 0 0 20">
                <TextBlock 
                    x:Name="Cur_Password"
                    Text="Current Password:"
                       Padding="2">

                </TextBlock>
                <TextBox
                Padding="2"
                 Margin="0 0 300 0">

                </TextBox>
            </StackPanel>

            <!--New Password-->

            <StackPanel Margin="0 0 0 20">
                <TextBlock 
                    x:Name="N_Password"
                    Text="New Password: "
                       Padding="2"
                          >

                </TextBlock>
                <TextBox
                 Padding="2"
                 Margin="0 0 300 0">

                </TextBox>
            </StackPanel>

            <!-- Confirm Password-->
            <StackPanel >
                <TextBlock
                    x:Name="C_Password"
                    Text="Confirm Password: "
                        Padding="2" >

                </TextBlock>
                <TextBox
                 Padding="2"
                 Margin="0 0 300 20"></TextBox>
            </StackPanel>
            <TextBlock
                x:Name="Password_Update_Message"
                
                Margin="10"
                
                />


            <!--Change password button-->
            <Button
                    x:Name="Change_Password"
                    Foreground="White" 
                    Background="#008080" 
                    HorizontalAlignment="Left" 
                    Padding="2"
                    Width="200" 
                    FontSize="15"
                    FontFamily="Helvetica" 
                    FontWeight="Light" 
                    Content="Change Password"
                MouseEnter="Change_Password_Entered"
                MouseLeave="Change_Password_Left" Click="Change_Password_Clicked"
                />

        </StackPanel>
    </Border>
</Window>
