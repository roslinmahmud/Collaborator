<Window x:Class="Collaborator.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Collaborator"
        mc:Ignorable="d"
        Title="Dashboard" Height="600" Width="800" ResizeMode="NoResize"
        WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="AliceBlue">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                <TextBox 
                    x:Name="SearchTextBox"
                    Margin="10 20" 
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    materialDesign:HintAssist.Hint="Search"
                    FontFamily="Helvetica" FontWeight="Light" FontSize="16"
                    TextChanged="SearchTextBox_TextChanged"/>
                <ListView>
                    
                </ListView>
            </StackPanel>
            
            <StackPanel 
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="10 10">
                <Button 
                    x:Name="Logout"
                    Background="Transparent"
                    Click="Logout_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Logout" 
                            Width="25" Height="25"
                            Background="Transparent" Foreground="Black"/>
                        <TextBlock
                            Foreground="Black"
                            FontFamily="Helvetica" FontWeight="DemiBold" FontSize="20">
                            Logout
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
